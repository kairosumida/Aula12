@model IEnumerable<Aula12.Models.StatusUsuario>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Status</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeStatus)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.StatusUsuarioId }) |
            @Html.ActionLink("Detailhes", "Details", new { id=item.StatusUsuarioId }) |
